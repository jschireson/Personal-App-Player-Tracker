<%- include('bootheader') -%>
  <%- include('menubar') -%>  

<head>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
body {
  font-family: 'Rajdhani', sans-serif;
}
</style>
</head>

<div class="jumbotron"> 
  <h1>Player Finder</h1> 
</div> 

<form method="post" action="/getPlayer">
  <h5>Enter Player Name:</h5>
  <input type="text" name="player"><br><br>

  <input type="submit" value="Create">
</form>

<% myAPI.map((player) => {%> 

<div class="content">
    <div class="playerBio">
      <h3><%= player.player.first_name + " " + player.player.last_name%></h3>
      <h4><b><%= player.team.abbreviation + "-" + player.player.position%></b></h4>
      <!-- add game score -->
    </div>

    <div class="playerStats">
      <p><%= player.pts + " Points " + player.reb + " Rebounds " + player.ast + " Assists "%></p>
    </div>
</div>
 <%})%>  

